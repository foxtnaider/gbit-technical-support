version: '3.8'

services:
  app:
    build:
      args:
        user: laravel
        uid: 1000
      context: ./
      dockerfile: Dockerfile
    image: gbit-technical-support
    container_name: gbit-app
    restart: unless-stopped
    environment:
      - TZ=America/Caracas
    working_dir: /var/www/
    volumes:
      - ./:/var/www
    networks:
      - gbit-network
    depends_on:
      - db

  nginx:
    image: nginx:alpine
    container_name: gbit-nginx
    restart: unless-stopped
    ports:
      - "8080:80"
    volumes:
      - ./:/var/www
      - ./docker/nginx:/etc/nginx/conf.d/
    networks:
      - gbit-network
      - web_network
    labels:
      # Traefik
      - "traefik.enable=true"
      - "traefik.http.routers.gbit-technical-support.rule=Host(`soporte.gbit.com.ve`)"
      - "traefik.http.routers.gbit-technical-support.entrypoints=websecure"
      - "traefik.http.routers.gbit-technical-support.tls.certresolver=myresolver"
      - "traefik.http.services.gbit-technical-support.loadbalancer.server.port=80"
      - "traefik.docker.network=web_network"
    depends_on:
      - app

  

  worker:
    build:
      args:
        user: laravel
        uid: 1000
      context: ./
      dockerfile: Dockerfile
    image: gbit-technical-support
    container_name: gbit-worker
    restart: unless-stopped
    environment:
      - TZ=America/Caracas
    working_dir: /var/www/
    command: sh /var/www/docker/start-worker.sh
    volumes:
      - ./:/var/www
    networks:
      - gbit-network
      - web_network
    depends_on:
      - app
      - db

  db:
    image: postgres:15
    container_name: gbit-db
    restart: unless-stopped
    environment:
      POSTGRES_DB: ${DB_DATABASE}
      POSTGRES_USER: ${DB_USERNAME}
      POSTGRES_PASSWORD: G0BiF0mMg79r
      POSTGRES_INITDB_ARGS: "--data-checksums"
    volumes:
      - pgdata:/var/lib/postgresql/data
    ports:
      - "5437:5432"
    networks:
      - gbit-network
      - web_network

networks:
  gbit-network:
    driver: bridge
  web_network:
    external: true

volumes:
  pgdata:
    driver: local
